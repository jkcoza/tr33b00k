<div class="page-header">
  <h1>All of the Statuses</h1>
</div>
    <div class="panel panel-header">
    <button type="button" class="btn-lg btn-success">
    <%= link_to 'New Status', new_status_path %>
    </button>
    </div>
    <div class=" panel-body">
    <% @statuses.each do |status| %>
      
      <div class="status">
        <strong><%= status.name %></strong>
        <p><%= status.content %></p>
        <div class="meta">
        <span class="time"><%= link_to time_ago_in_words(status.created_at), status %></span>
        
        <span class="admin">
          <%= link_to 'Edit', edit_status_path(status) %>
          <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %>
          </span>
      </div>
      </div>
      
    <% end %>
</div>
<br>


